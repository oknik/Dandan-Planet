  .container {
    display: flex;
    height: 100vh;
    justify-content: flex-start;
    background-color: #c8e8e8;
    padding-top: 50px;
  }

  .navigation-bar {
    width: 95%;
  }

  .title {
    margin-top: -10px;
  }

 .title-img {
    width: 400px;
    height: 150px;
  }

  .yunmu-title, .shengmu-title {
    width: 200px;
    height:250px;
    margin-bottom: 10px;
  }

  .shengmu-title {
    margin-top: 20px;
  }

  .content-container {
    display: flex;
    justify-content: center;
    padding: 10px 0;
    width: 100%;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    gap: 10px;
    margin-left: 100px;
  }

  .content-item {
    display: inline-block;
    justify-content: center;
    width: 200px;
    margin-left: 20px;
    margin-bottom: 10px;
    height: auto;
    text-align: center;
  }

  .content-img {
    width: 80%;
    height: 70px;
    object-fit: cover;
    border-radius: 8px;
  }

  .content-container::-webkit-scrollbar {
    height: 5px;
    background-color: transparent;
  }

  .content-container::-webkit-scrollbar-thumb {
    background-color: #888;
    border-radius: 10px;
  }

  .content-container::-webkit-scrollbar-thumb:hover {
    background-color: #555;
  }

