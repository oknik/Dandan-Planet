/* pages/Chinese/hanzi-learn/hanzi-learn.wxss */
page {
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;  /* 水平居中 */
  align-items: center;  /* 垂直居中 */
  background-color: #c8e8e8;
}

.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-size: cover;
  margin-top: 5%;
  background-color: #c8e8e8;
  z-index: 1;
}

.navigation-bar {
  width: 95%;
  position: fixed;
  top: 1.5%;
}

.content {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;  /* 让内容部分占满剩余空间 */
}

/* 汉字容器，将汉字放在图片的中央 */
.character-container {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10%;
  margin-left: 2%;
  z-index: 1;
}

.hz {
  max-width: 100%;  /* 确保汉字占满整个容器 */
  max-height: 100%;
  object-fit: contain;  /* 确保汉字比例合适 */
}

.pinyin-container{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40px;
}

.pinyin{
  width: 59vw;
  height: 49px;
  border-top: 2px solid #ffffec;
  border-bottom: 2px solid #ffffec;
  margin: 18px auto;
}
.pinyin_top{
  height: 15px;
  border-bottom: 2px solid #ffffec;
  text-align: center;
}
.pinyin_text{
  line-height: 40px;
  font-size: 200%;
}

.buttons{
  padding: 2%;
}

.stroke-btn{
  width: 200px; /* 设置图片的宽度 */
  height: 80px; /* 设置图片的高度 */
  object-fit: contain;
  padding: 5px;
}

.read-btn{
  width: 200px; /* 设置图片的宽度 */
  height: 80px; /* 设置图片的高度 */
  object-fit: contain;
  padding: 5px;
}

.write-btn{
  width: 200px; /* 设置图片的宽度 */
  height: 80px; /* 设置图片的高度 */
  object-fit: contain;
  padding: 5px;
}

.reward-image-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, 0.5); /* 半透明背景 */
  z-index: 99999;
}

.reward-image {
  width: 400px; /* 适当调整图片大小 */
  height:400px;
  border-radius: 20%;
  object-fit: contain; 
}
