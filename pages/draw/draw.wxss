 .container {
    display: flex;
    height: 100vh;
    justify-content: flex-start;
    background-color: #c8e8e8;
    padding-top: 50px;
  }

  .navigation-bar {
    width: 95%;
  }

  .title {
    margin-top: -10px;
  }

 .title-img {
    width: 400px;
    height: 100px;
  }

  .draw-container {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-top: 20px;
}

  .canvas-container {
      position: relative;
      width: 400px;
      height: 400px;
  }

  .toolbar {
      display: flex;
      flex-direction: column;
      justify-content: space-around;
      align-items: center;
      margin-left: 20px;
      margin-top: 10px;
      height: 100%;
  }

  .pencil-button,
  .clear-button,
  .submit-button {
      width: 100px;
      height: 100px;
      margin-bottom: 15px;
  }

  .learn-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 20px;
}

  .model-container,
  .content-container {
      flex: 1;
      padding: 10px;
  }

  .question-img,
  .character-img {
      width: 300px;
      height: 300px;
  }

