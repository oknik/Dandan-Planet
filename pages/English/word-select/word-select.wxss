/* pages/English/word-select/word-select.wxss */
.container {
  display: flex;
  height: 100vh;
  justify-content: flex-start;
  background-color: #c8e8e8;
  padding-top: 50px;
}

.navigation-bar {
  width: 95%;
  position: fixed;
  top: 3%;
}

.title-pic{
  width:500px;
  height:160px;
  margin-top: 50px;
}

.theme-container {
  margin-top: 40px;
  width: 100%;
  overflow-y: auto; /* 允许垂直滚动 */
  overflow-x: hidden; /* 禁止水平滚动 */
  scroll-snap-type: x mandatory;
  gap: 10px;
  display: flex;
  flex-wrap: wrap; 
  justify-content: space-evenly; 
}

.theme-item {
  justify-content: center;
  width: 200px;
  margin-bottom: 30px;
  height: 150px;
  text-align: center;
}

.theme-img {
  width: 100%;
  height: 100%;
  object-fit: contain; /* 确保图片在容器内缩放但保持比例 */
  border-radius: 20%;
}

.theme-container::-webkit-scrollbar {
  height: 10px;
  background-color: transparent;
}

.theme-container::-webkit-scrollbar-thumb {
  background-color: rgb(182, 182, 182);
  border-radius: 8px;
}

.theme-container::-webkit-scrollbar-thumb:hover {
  background-color: rgb(129, 129, 129);
}
