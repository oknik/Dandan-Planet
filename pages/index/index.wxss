page {
  height: 100vh;
  width: 100vw;
  display: flex;
}

.container {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-size: cover;
  padding: 10px;
}

.name {
  width: 600px;
  height: 300px;
  margin-top: -150px;
  margin-bottom: -120px;
}

.tabs {
  display: flex;
  justify-content: space-around;
  padding: 10px 0;
  width: 90%;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 10px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.input-container {
  width: 75%;
  height: 300px;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 10px;
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  margin-bottom: 10px;
  position: relative;
}

.phone, .password, .code {
  display: flex;
  align-items: center;
  margin-left: 10px;
  margin-top: 10px;
  gap: 10px;
}

.code {
  margin-bottom: 10px;
}

.phone-label, .password-label, .code-label {
  width: 50px;
  font-size: 16px;
  color: #333;
}

.phone-input {
  padding: 10px;
  font-size: 16px;
  border: 1px solid #ccc;
  background-color: white;
  border-radius: 5px;
  width: 250px;
}

.password-input {
  padding: 10px;
  font-size: 16px;
  border: 1px solid #ccc;
  background-color: white;
  border-radius: 5px;
  width: 250px;
}

.eye-icon {
  width: 20px;
  height: 20px;
  position: absolute;
  right: 160px;
  z-index: 10;
}

.forgot-password-container {
  margin-top: 5px;
}

.forgot-password {
  color: #007bff;
}

.code-input {
  padding: 10px;
  font-size: 16px;
  border: 1px solid #ccc;
  background-color: white;
  border-radius: 5px;
  width: 160px;
}

.code-button {
  padding: 3px 20px;
  background-color: #fdcd00;
  color: black;
  border-radius: 5px;
  font-size: 14px;
  margin-left: 10px;
  max-width: 80px;
}

.button-container {
  display: flex;
  justify-content: center;
  /*gap: 20px;*/
  width: 80%;
}

.login-button, .register-button {
  background-color: #4cbdff;
  color: white;
  padding: 3px 50px;
  border-radius: 5px;
  font-size: 16px;
}