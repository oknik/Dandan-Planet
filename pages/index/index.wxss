page {
  height: 100vh;
  width: 100vw;
  display: flex;
}

.container {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-size: cover;
  padding: 10px;
}

.name {
  width: 400px;
  height: 200px;
  margin-top: -150px;
  margin-bottom: -90px;
}

.tabs {
  display: flex;
  justify-content: space-around;
  background-color: white;
  padding: 10px 0;
  width: 100%;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 10px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.input-container {
  width: 75%;
  background-color: white;
  border-radius: 10px;
  padding: 20px;
  display: flex;
  flex-direction: column;
  gap: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  margin-bottom: 10px;
  position: relative;
}

.phone, .password, .code {
  display: flex;
  align-items: center;
  margin-left: 10px;
  gap: 10px;
}

.phone-label, .password-label, .code-label {
  width: 50px;
  font-size: 16px;
  color: #333;
}

.phone-input {
  padding: 10px;
  font-size: 16px;
  border: 1px solid #ccc;
  border-radius: 5px;
  width: 180px;
}

.password-input {
  padding: 10px;
  font-size: 16px;
  border: 1px solid #ccc;
  border-radius: 5px;
  width: 180px;
}

.eye-icon {
  width: 20px;
  height: 20px;
  position: absolute;
  right: 35px;
  z-index: 10;
}

.code-input {
  padding: 10px;
  font-size: 16px;
  border: 1px solid #ccc;
  border-radius: 5px;
  width: 80px;
}

.code-button {
  padding: 10px 20px;
  background-color: #ccc;
  color: white;
  border-radius: 5px;
  font-size: 14px;
  margin-left: 10px;
  max-width: 80px;
}


.button-container {
  display: flex;
  justify-content: center;
  margin-top: 20px;
  gap: 20px;
  width: 80%;
}

.login-button, .register-button {
  background-color: #4cbdff;
  color: white;
  padding: 10px 20px;
  border-radius: 5px;
  font-size: 16px;
}